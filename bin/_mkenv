#!/usr/bin/env bash
set -e

PYTHON="${PYTHON:-python3.8}"
PREFIX="${PREFIX:-.virtualenv}"

# Make a python virtualenv
${PYTHON} -m venv ${PREFIX}

# Install useful tools
${PREFIX}/bin/${PYTHON} -m \
    pip install \
      pip-tools \
      pylint \
      "pytest<5.4.0" \
      black \
      flake8 \
      isort \
      pycodestyle \
      pydocstyle \
      pytest-sugar \
      pytest-cov \
      pytest-mock
