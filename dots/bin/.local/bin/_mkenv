#!/usr/bin/env bash
set -e

PYTHON="${PYTHON:-python3.9}"
PREFIX="${PREFIX:-.venv}"

DEV_DEPS='
        black=*
        coverage[toml]=*
        flake8=*
        flake8-aaa=*
        flake8-bugbear=*
        flake8-comprehensions=*
        flake8-docstrings=*
        flake8-eradicate=*
        flake8-isort=*
        flake8-pytest-style=*
        flake8-use-fstring=*
        mccabe=*
        mypy=*
        isort=*
        pep8-naming=*
        pytest=*
        pytest-cov=*
        pytest-mock=*
        radon=*
        vulture=*
        '

DEV_DEPS='
        black=*
        flake8=*
        pytest=*
        pytest-cov=*
        pytest-mock=*
        '

##### Use Poetry
if [ ! -z "$(poetry --version)" ]; then
  if [ -f pyproject.toml ]; then
    poetry install  --no-root || exit
  else
    poetry init --no-interaction || exit
  fi

  poetry add --dev $DEV_DEPS

##### Use VirtualEnv and pip
else
  # Make a python virtualenv
  ${PYTHON} -m venv ${PREFIX}
  PATH=${PREFIX}:$PATH
  # Install useful tools
  ${PREFIX}/bin/${PYTHON} -m \
      pip install $DEV_DEPS

  [[ -f requirements.txt ]] &&  \
      ${PREFIX}/bin/${PYTHON} -m \
          pip install -r requirements.txt
fi

