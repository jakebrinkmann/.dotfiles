snippet xcorrelationid
      responses:
	'200':
	  description: OK - the new multipart upload was successfully started.
	  headers:
	    X-Correlation-ID:
	      "$ref": "#/components/headers/X-Correlation-ID"

  headers:
    X-Correlation-ID:
      description: Unique ID to correlate client request with server response.
      schema:
	type: string
