snippet parameters
  paths:
    /users/{userId}:
      get:
	summary: Get a user by ID
	parameters:
	  - in: path
	    name: userId
	    schema:
	      type: integer
	      minimum: 0
	      default: 0
	    required: false
	    description: Numeric ID of the user to get
	- in: query
          name: status
          schema:
            type: string
            enum:
              - available
              - pending
              - sold
        - in: header
          name: X-Request-ID
          schema:
            type: string
            format: uuid
          required: true
