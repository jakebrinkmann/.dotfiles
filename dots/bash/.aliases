#!/bin/bash
# Always copy contents of directories (r)ecursively and explain (v) what was done
alias cp='cp -rv'
# List contents with colors for file types, (A)lmost all hidden files
alias ls='ls --color=auto -ACF'
# List contents with colors for file types, (a)ll hidden entries
alias ll='ls --color=auto -sialF'

# Explain (v) what was done when moving a file
alias mv='mv -v'
# Create any non-existent (p)arent directories and explain (v) what was done
alias mkdir='mkdir -pv'
# Always try to (c)ontinue getting a partially-downloaded file
alias wget='wget -c'

alias d='date "+%j/%Y [%m/%d] %H:%M:%S (%I:%M%p) %Z"'
alias t="top -M -u ${USER}; c"
alias grep="grep --color=auto"
alias m="find . \( ! -regex '.*/\..*' \) -printf '%T@ %Tc %p\n' | sort -n | tail -n 25"
alias first="head -n1"

# flash red on bell
alias bell="echo -e '\a'"
alias wbell='for x in $(seq 1 60); do bell; sleep 1; done'

# tmux and vim
alias tmux='tmux -2'                   # force tmux to use 256 colors
alias ta='tmux a'                      # attach to session
alias td='tmux attach -t dev || tmux new -s dev' # developer session

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

# Disable GUI
alias emacs="emacs -nw"

# Quick Development Shortcuts
alias g=git
alias gti=git
alias gi=git
alias vi=vim
alias python=python3
alias vimrc="vim ~/.vimrc"

# more wholesome experience
alias please=sudo
alias lick=touch

# Pulse Secure VPN
alias _vpn='sudo ip link set dev eth0 mtu 1400'

# WSL2 Memory Leak
alias _free="sudo su -c 'sync; echo 1 > /proc/sys/vm/drop_caches'"
alias DockerDesktop="'/c/Program Files/Docker/Docker/Docker Desktop.exe' &"
alias PulseVpn="'/c/Program Files (x86)/Common Files/Pulse Secure/JamUI/Pulse.exe' -show &"

# Python Environments
alias startenv='source $(poetry env info --path)/bin/activate && which python3'
alias stopenv='deactivate'

# Helper aliases
alias archive='tar --create --gzip --verbose --file'
alias dotenv='export $(cat .env | xargs)'

# console-oriented
alias wttr="curl wttr.in/?0"

# ideas
alias notes='vim -O ~/$(date +%y%m)-TODOS.md ~/$(date +%y%m)-NOTES.md -c "split ~/.dots/TODOS.md"'
alias tasks='notes'

# SVN
alias svn="svn --username=$SVN_USERNAME --password=$SVN_PASSWORD"
