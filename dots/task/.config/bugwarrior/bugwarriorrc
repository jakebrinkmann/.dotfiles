# https://bugwarrior.readthedocs.io/en/latest/common_configuration.html
[general]
targets = company_gitlab, company_jira
# log.level = DEBUG
shorten = true
annotation_comments = false
replace_tags = True
static_tags = next, today, yesterday, contrib
static_fields = project

# https://bugwarrior.readthedocs.io/en/latest/services/gitlab.html
[company_gitlab]
service = gitlab
gitlab.login = USERNAME
gitlab.token = GITLAB_API_TOKEN
gitlab.host = WORK_GIT_SERVER
# gitlab.include_repos = me/project_foo, bar/project_fox
# gitlab.include_regex = foo/ep_.*
gitlab.filter_merge_requests = True
gitlab.only_if_assigned = USERNAME
gitlab.include_todos = True
gitlab.description_template = {{gitlabtitle}}
gitlab.default_priority = L
gitlab.add_tags = {{gitlabtype}} {{gitlabauthor}}
gitlab.project_template = gitlab.{{gitlabrepo}}

# https://bugwarrior.readthedocs.io/en/latest/services/jira.html
[company_jira]
service = jira
jira.base_uri = WORK_JIRA_SERVER
jira.username = EMAIL
jira.password = JIRA_API_TOKEN
jira.query = assignee = currentUser() AND resolution is null
jira.default_priority = L
jira.description_template = {{jiraid}}: {{jirasummary}}
jira.project_template = jira.{{jiraparent if jiraparent else jiraproject}}
# jira.add_tags = {{ jiraissuetype | replace("-","_") }}
jira.add_tags = {{ jirastatus | replace(" ","") | lower }}
jira.import_sprints_as_tags = True
