#!/bin/tcsh
#######################Setting the user prompt #############################

set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}"
set  folder="%{\033]0;%~\007%}"

set prompt="${folder}${green}%n${blue}@%m${end}> "
breaksw

unset red green yellow blue magenta cyan white end folder

################################################################################


